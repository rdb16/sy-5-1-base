{% extends 'users.html.twig' %}

{% block title %}modification du mot de passe de {{ app.user.name }}{% endblock %}


{% block body %}
  <div class="grix xs4 container">
  
    <div class="col-xs4">
      {% for message in app.flashes('error') %}
        <div class="p-3 my-2 rounded-2 error">{{ message }}</div>    
      {% endfor %}
    </div>
		<div class="col-xs4">
			<h1>Modification du mot de passe de {{ app.user.name }}</h1>
        <form method="post">
          <div class="form-field">
            <label for="pass">Mot de passe</label>
            <input type="password" id="pass" name="pass" class="form-control rounded-1" />
          </div>
          <div class="form-field">
            <label for="pass2">Confirmer le Mot de passe</label>
            <input type="password" id="pass2" name="pass2"  class="form-control rounded-1"/>
          </div>
          <button class="btn blue">Valider</button>

        </form>
		</div>		
  </div>
		
{% endblock %}

