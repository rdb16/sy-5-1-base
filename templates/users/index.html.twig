{% extends 'users.html.twig' %}

{% block title %}Profil de {{ app.user.name }}{% endblock %}


{% block body %}

<div class="grix xs4 container">
    {% for message in app.flashes('message') %}
        <div class="col-xs4"> 
            <div class="p-3 my-2 rounded-2 success"> {{ message }} </div>
        </div>        
    {% endfor %}

    <div class="col-xs4"><h1>Profil de {{ app .user.firstname }} {{ app.user.name }}</h1></div>
    <div class="col-xs4">------------------------------------------------------</div>
	<div class="col-xs1">Nom:</div>
	<div class="col-xs3">{{ app.user.name }}</div>
	<div class="col-xs1">Pr√©nom:</div>
	<div class="col-xs3">{{ app.user.firstname }}</div>
    <div class="col-xs1">Email:</div>	
	<div class="col-xs3">{{ app.user.email }}</div>	
    <div class="col-xs4"></div>
    <div class="col-xs4"></div>

    <div class="col-xs4">Action:</div>
    <div class="col-xs1"></div>
    <div class="col-xs1">
        <a href="{{ path('users_profil_modifier') }}" class="btn shadow-1 small blue rounded-4">Modifier mon profil utilisateur</a>
    </div>
    <div class="col-xs1"></div>
    <div class="col-xs1">
        <a href="{{ path('users_pass_modifier') }}" class="btn shadow-1 small blue rounded-4">Modifier le mot de passe</a>        
    </div>
       

   
   
    <div class="col-xs4"><h1>Liste des annonces ({{ app.user.annonces | length }})</h1></div>
    <div class="col-xs4">-----------------------------------------------------------------------------------------------------</div>

    {% for annonce in app.user.annonces %}
        <div class="col-xs1">Titre:</div>
        {# <div class="col-xs3">{{ annonce.title }}</div> #}
        <div class="col-xs1">{{ annonce.title }}</div>
        <div class="col-xs1">
            <a href="{{ path('users_annonces_edit', {'id': annonce.id}) }}" class="btn shadow-1 small blue rounded-4">Editer</a>
        </div>

        <div class="col-xs1"><button class="btn shadow-1 small red rounded-4">Supprimer</button></div>
        <div class="col-xs4">-----------------------------------------------------------------------------------------------------</div>

    {% endfor %}
</div>
{% endblock %}
